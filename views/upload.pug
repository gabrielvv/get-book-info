extends layout

block content
    form(action="/upload", method="post", enctype="multipart/form-data", id="form")
        input(type="text", name="title")
        input(id="file_input", type="file", name="image")
        button(type="submit", value="Upload") Upload File
    div(class="camera")
        video(id="video") Video stream not available
        button(id="startbutton") Take photo
        canvas(id="canvas")
        div(class="output")
            img(id="photo" alt="The screen capture will appear in this box.")
    
    script(src="js/script.js")